@implements IDisposable



@if (allState.ShowCity)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="float-start">City</h4>
                        <button class="btn btn-outline-success float-end" @onclick="AddOpenDialog"><i class="bi bi-plus-circle-doted"></i>Add Department</button>
                    </div>
                    <div class="card-header" style="max-height:580px; overflow-x:hidden; overflow-y:scroll;">
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col"> #</th>
                                        <th scope="col">Id</th>
                                        <th scope="col">Country</th>
                                        <th scope="col">City</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Cities.Count <= 0)
                                    {
                                        <tr>
                                            <td colspan="5"><div class="alert alert-info text-center">No City added yet!</div></td>
                                        </tr>
                                    }
                                    else
                                    {
                                        int count = 1;
                                        foreach (var item in Cities)
                                        {
                                            <tr>
                                                <th>@count</th>
                                                <td>@item.Id</td>
                                                <td>@item.Country!.Name</td>
                                                <td>@item.Name</td>
                                                <td>
                                                    <i class="bi bi-pencil text-info" @onclick="()=>EditClicked(item)"></i>
                                                    <i class="bi bi-trash text-danger" @onclick="()=>DeleteClicked(item)"></i>
                                                </td>
                                            </tr>
                                            count++;
                                        }


                                       
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

@code {
    [CascadingParameter] public IModalService Modal { get; set; } = default!;
    City City = new();
    CityDialog? CityDialog;
    public string Title { get; set; } = "Add";

    public List<Country> Countryes { get; set; } = new();
    public List<City> Cities { get; set; } = new();

    
    protected async override void OnInitialized()
    { 
        await GetCities();
        await GetCountryes();
        allState.Action += StateHasChanged;
    }

    private async Task GetCountryes()
    {
        Countryes = await countryService.GetAll(Constants.CountryBaseUrl);
    }
    private async Task GetCities()
    {
        Cities = await cityService.GetAll(Constants.CityBaseUrl);
    }

    async Task AddOpenDialog()
    {
        Title = "Add";
        City = new();
        await OpenDialog();
    }

    async Task OpenDialog()
    {

        if (Title == "Update")
        {
            var parameters = new ModalParameters()
        .Add(nameof(CityDialog.City), City);


            var form = Modal.Show<CityDialog>($"{Title} City", parameters);
            var result = await form.Result;

            if (result.Confirmed)
            {
                var temp = result.Data.ToString().Split(';');
                var t1 = "";
                var t2 = 0;

                if (temp.Length == 2)
                {
                    City.Name = temp[0];
                    t1 = temp[1];
                    int.TryParse(t1, out t2);
                    if (int.TryParse(t1, out t2))
                    {
                        City.CountryId = t2;


                        await HandleSaveOperationEvent(City);

                    }

                }

            }
        }
        else
        {
            var form = Modal.Show<CityDialog>($"{Title} City");
            var result = await form.Result;

            if (result.Confirmed)
            {
                var temp = result.Data.ToString().Split(';');
                var t1 = "";
                var t2 = 0;

                if (temp.Length == 2)
                {
                    City.Name = temp[0];
                    t1 = temp[1];
                    int.TryParse(t1, out t2);
                    if (int.TryParse(t1, out t2))
                    {
                        City.CountryId = t2;


                        await HandleSaveOperationEvent(City);

                    }

                }

            }
        }
    }

    private async Task HandleSaveOperationEvent(City city)
    {
        bool successCheck = false;
        if (city.Id > 0)
        {
            var result = await cityService
            .Update(city, Constants.CityBaseUrl);
            successCheck = await DisplayMassage(result.Flag, result.Massage);

        }
        else
        {
            var response = await cityService
            .Insert(city, Constants.CityBaseUrl);
            successCheck = await DisplayMassage(response.Flag, response.Massage);

        }
        if (successCheck)
        {
            City = new();
            await GetCities();
            Title = "Add";
            StateHasChanged();
        }
    }
    private async void EditClicked(City city)
    {
        Title = "Update";
        City = city;
        await GetCities();
        await OpenDialog();

    }

    private async void DeleteClicked(City city)
    {
        var confirmModal = Modal.Show<ConfirmationDialog>($"Are you sure you wanna delete {city.Name}?");
        var result = await confirmModal.Result;

        if (result.Cancelled) return;

        var response = await cityService.DeleteById(city.Id, Constants.CityBaseUrl);
        if (await DisplayMassage(response.Flag, response.Massage))
        {
            await GetCities();
            StateHasChanged();
        }
    }


    private async Task<bool> DisplayMassage(bool flag, string massage)
    {

        if (flag)
        {
            var parameters = new ModalParameters()
        .Add(nameof(DisplayMessage.Message), massage);
            Modal.Show<DisplayMessage>("Succes", parameters);
            return true;
        }
        else
        {
            var parameters = new ModalParameters()
        .Add(nameof(DisplayMessage.Message), massage);
            Modal.Show<DisplayMessage>("Alert", parameters);
            return false;
        }
    }
    public void Dispose()
    {
        allState.Action -= StateHasChanged;
    }
}